    public AddColour(col : Colour) : PetriNet
    {
      def col = Colour.idx_lens.Set(col, colour_idx);
      //col.idx = colour_idx;
      colours.Add(col);
      BuildMatrix() |> PetriNet.colour_idx_lens.Update(_, _ + 1)
    }
    
    public AddPlace(place : Place) : PetriNet * int
    {
      def place = Place.idx_lens.Set(place, place_idx);
      def net = PetriNet.places_lens.Update(this, x => x.Add(place)) |> 
      _.BuildMatrix() |> PetriNet.place_idx_lens.Update(_, _ + 1);
      (net, place.idx)
    }
    
    public AddTransition(tran : Transition) : PetriNet * int
    {
      def tran = Transition.idx_lens.Set(tran, transition_idx);
      def net = PetriNet.transitions_lens.Update(this, x => x.Add(tran)) |> 
      _.BuildMatrix() |> PetriNet.transition_idx_lens.Update(_, _ + 1);
      (net, tran.idx)
    }
    
    public AddArc(place : Place, arc : Arc, tran : Transition) : void
    {
      def idx = place.idx;
      def tidx = tran.idx;
      def cidx = arc.colour.idx;
      output_matrix[cidx, idx, tidx] = arc;
    }
    
    public AddArc(tran : Transition, arc : Arc, place : Place) : void
    {
      def idx = place.idx;
      def tidx = tran.idx;
      def cidx = arc.colour.idx;
      input_matrix[cidx, idx, tidx] = arc;
    }
    
