  }
  
  [Record]
  [Lens]
  public class Transition
  { 
    public idx : int;
    public name : string;
    public guard : Guard;
  }
  
  public class GuardExpr
  {
  }
  
  [Record]
  public class Guard
  {
    expr : GuardExpr;
  }
  
  public variant ListExpr
  {
  }
  
  [Record]
  public variant ArcExpr
  {
    | NumTok { tok : Token; }
    | Var { n : string; }
    | ListExpr {expr : ListExpr;}
    
  }
  
