  [Record]
  public class Token
  {
    public value  : TokenVal[Colour];
    public colour : Colour;
  }
  
  [Record]
  [Lens]
  public class Place
  {
    public idx : int;
    public name : string;
    public colour : Colour;
    public marking : list[Token];
    
   
      
  }
  
  [Record]
  public class TokenSet
  {
    public num   : int;
